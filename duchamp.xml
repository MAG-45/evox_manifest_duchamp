<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!--Remotes-->
    <remote name="los"            fetch="https://github.com/LineageOS"           revision="lineage-22.1" />
    <remote name="duchamp"        fetch="https://github.com/MAG-45"          revision="lineage-22.1" />
    <remote name="duchamp-lfs"    fetch="https://gitea.com/MAG-45"              revision="lineage-22.1"/>	    
    <remote name="micode"         fetch="https://github.com/MiCode"             revision="bsp-duchamp-u-oss"/>
    <!--Devices Trees-->
    <project name="device_xiaomi_duchamp"           path="device/xiaomi/duchamp"       remote="duchamp" />
    <project name="device_xiaomi_duchamp-kernel" path="device/xiaomi/duchamp-kernel" remote="duchamp" revision="lineage-21"/>
    <project name="device_mediatek_sepolicy_vndr" path="device/mediatek/sepolicy_vndr" remote="duchamp" />

    <!--Vendors Tree-->
    <project name="vendor_xiaomi_duchamp"       path="vendor/xiaomi/duchamp"       remote="duchamp-lfs" />

    <!--Kernel Tree-->
    <project name="Xiaomi_Kernel_OpenSource"            path="kernel/xiaomi/mt6897"        remote="micode" />

    <!--Hardware dependencies-->
    <project name="hardware_xiaomi"             path="hardware/xiaomi"             remote="duchamp" />
    <project name="hardware_mediatek"           path="hardware/mediatek"                remote="duchamp"/>
    <project name="hardware_lineage_compat"     path="hardware/lineage/compat"          remote="duchamp"/>

    <!-- Remove Problematic Repo -->
    <remove-project name="LineageOS/android_hardware_lineage_compat" />
</manifest>

